# Position Tracker Environment Configuration

# Database Configuration
# For SQLite (development)
# DATABASE_URL=sqlite:///./local_test.db

# For PostgreSQL (production)
# Note: The app automatically converts psycopg2 to asyncpg for async operations
DATABASE_URL=postgresql+psycopg2://tracker_user:secure_pass_123@localhost:5432/position_tracker

# PostgreSQL Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=3600

# Application Settings
APP_NAME=Position Tracker API
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Security Settings (for production)
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Event Master Integration
EVENT_MASTER_API_KEY=your-event-master-api-key
EVENT_MASTER_BASE_URL=https://event-master.example.com

# Monitoring and Logging
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
LOG_FORMAT=json

# Performance Settings
MAX_WORKERS=4
WORKER_TIMEOUT=30

